<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rental.controller.EquipoFormController">
   <children>
      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Detalles del Equipo" />
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Código:" />
            <TextField fx:id="txtCodigo" promptText="ej. CAM-001" GridPane.columnIndex="1" />
            <Label text="Nombre:" GridPane.rowIndex="1" />
            <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Categoría:" GridPane.rowIndex="2" />
            <ComboBox fx:id="comboCategoria" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Estado:" GridPane.rowIndex="3" />
            <ComboBox fx:id="comboEstado" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Valor Compra (€):" GridPane.rowIndex="4" />
            <TextField fx:id="txtValorCompra" text="0.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Tarifa Diaria (€):" GridPane.rowIndex="5" />
            <TextField fx:id="txtTarifa" text="0.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="URL Foto:" GridPane.rowIndex="6" />
            <TextField fx:id="txtFotoUrl" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Label text="Descripción:" GridPane.rowIndex="7" />
            <TextArea fx:id="txtDescripcion" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />
         </children>
      </GridPane>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCancelar" text="Cancelar" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#handleGuardar" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Guardar" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
