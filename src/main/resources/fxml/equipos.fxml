<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rental.controller.EquiposController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Inventario de Equipos" />
            <TextField fx:id="searchField" promptText="Buscar por nombre o código..." HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleBuscar" text="Buscar" />
            <Button mnemonicParsing="false" onAction="#handleNuevoEquipo" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="+ Nuevo Equipo" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <TableView fx:id="equiposTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colCodigo" prefWidth="100.0" text="Código" />
          <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
            <TableColumn fx:id="colCategoria" prefWidth="120.0" text="Categoría" />
            <TableColumn fx:id="colEstado" prefWidth="120.0" text="Estado" />
            <TableColumn fx:id="colTarifa" prefWidth="100.0" text="Tarifa / Día" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#handleEditar" text="Editar" />
            <Button mnemonicParsing="false" onAction="#handleEliminar" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Eliminar" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
