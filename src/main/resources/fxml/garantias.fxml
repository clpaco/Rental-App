<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rental.controller.GarantiasController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gestión de Garantías" />
            <TextField fx:id="searchField" promptText="Buscar por equipo o proveedor..." HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleBuscar" text="Buscar" />
            <Button mnemonicParsing="false" onAction="#handleNuevaGarantia" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="+ Registrar Garantía" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <TableView fx:id="garantiasTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colEquipo" prefWidth="200.0" text="Equipo" />
          <TableColumn fx:id="colProveedor" prefWidth="150.0" text="Proveedor" />
            <TableColumn fx:id="colFin" prefWidth="100.0" text="Vencimiento" />
            <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
            <TableColumn fx:id="colContacto" prefWidth="150.0" text="Soporte" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
             <Button mnemonicParsing="false" onAction="#handleEditar" text="Ver Detalle / Editar" />
             <Button mnemonicParsing="false" onAction="#handleEliminar" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Eliminar" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
